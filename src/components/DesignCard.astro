---
import type { Design } from '../lib/types';
interface Props { design: Design; }
const { design } = Astro.props;
---
<a href={`/designs/${design.id}`} class="design-card">
  <img src={design.cover_image || `https://placehold.co/600x400/f5f5f7/6e6e73?text=${design.title}`} alt={design.title} loading="lazy" />
  <div class="card-content">
    <h3>{design.title}</h3>
    <p>{design.project_type}</p>
  </div>
</a>
<style>
  .design-card {
    display: flex; /* Changed to flex for better content control */
    flex-direction: column;
    break-inside: avoid;
    margin-bottom: 1.5rem;
    overflow: hidden; /* Important for glass effect */
    transition: transform 0.2s ease;
  }
  .design-card:hover { transform: translateY(-8px); }
  img {
    width: 100%;
    display: block;
    height: auto;
    border-radius: 24px 24px 0 0; /* Rounded top corners */
  }
  .card-content {
    padding: 1.25rem;
    margin-top: -1px; /* Prevent weird gaps */
  }
  h3 { color: var(--text-color); margin: 0 0 0.25rem; }
  p { color: var(--hint-color); margin: 0; font-size: 0.9rem; }
</style>