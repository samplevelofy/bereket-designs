---
const brandName = "bereket designs";
const fullName = "Bereket Tadele";
const jobTitle = "Graphic Designer & Visual Storyteller";
const bio = "A creative force specializing in brand identity and UI/UX. I transform complex ideas into clean, impactful, and beautiful designs.";
const profileImage = "/profile-photo.jpg";
const socialLinks = {
  behance: "https://www.behance.net/bereketdesigns",
  dribbble: "https://dribbble.com/bereketdesigns",
  linkedin: "https://linkedin.com/in/bereketdesigns",
};
---
<aside id="sidebar" class="sidebar">
  <div class="sidebar-content">
    <a href="/" class="profile-header">
      <img src={profileImage} alt={fullName} class="profile-photo" />
      <div class="profile-text">
        <h2>{fullName}</h2>
        <p class="brand-name">@{brandName}</p>
      </div>
    </a>
    
    <nav class="sidebar-nav">
      <a href="/">Work</a>
      <a href="/about">About</a>
    </nav>
    
    <div class="sidebar-bio">
      <p>{bio}</p>
    </div>
    
    <div class="sidebar-footer">
      <div class="social-links">
        <a href={socialLinks.behance} target="_blank">Behance</a>
        <a href={socialLinks.dribbble} target="_blank">Dribbble</a>
        <a href={socialLinks.linkedin} target="_blank">LinkedIn</a>
      </div>
      <p class="copyright">&copy; {new Date().getFullYear()}</p>
    </div>
  </div>
</aside>
<style>
  .sidebar { background-color: var(--secondary-bg-color); border-right: 1px solid var(--border-color); height: 100vh; position: sticky; top: 0; display: flex; flex-direction: column; padding: 2rem; z-index: 200; }
  @media (max-width: 1023px) { .sidebar { position: fixed; top: 0; left: 0; width: 300px; height: 100%; transform: translateX(-100%); transition: transform 0.3s ease; will-change: transform; } .sidebar.is-open { transform: translateX(0); } }
  .sidebar-content { display: flex; flex-direction: column; height: 100%; }
  .profile-header { display: flex; align-items: center; gap: 1rem; margin-bottom: 3rem; }
  .profile-photo { width: 60px; height: 60px; border-radius: 50%; object-fit: cover; }
  h2 { font-size: 1.25rem; margin: 0; color: var(--text-color); }
  .brand-name { font-size: 1rem; color: var(--hint-color); margin: 0; }
  .sidebar-nav { display: flex; flex-direction: column; gap: 0.5rem; margin-bottom: 2rem; }
  .sidebar-nav a { font-size: 1.1rem; font-weight: 500; color: var(--text-color); padding: 0.75rem 1rem; border-radius: 10px; transition: background-color 0.2s, color 0.2s; }
  .sidebar-nav a:hover, .sidebar-nav a.is-active { background-color: var(--accent-color); color: #fff; }
  .sidebar-bio { font-size: 0.95rem; color: var(--hint-color); line-height: 1.5; }
  .sidebar-footer { margin-top: auto; padding-top: 2rem; border-top: 1px solid var(--border-color); }
  .social-links { display: flex; gap: 1.5rem; margin-bottom: 1rem; }
  .social-links a { font-weight: 500; font-size: 0.9rem; color: var(--hint-color); }
  .copyright { font-size: 0.8rem; color: var(--hint-color); opacity: 0.7; }
</style>