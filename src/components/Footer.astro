---
// IMPORTANT: Replace with your actual professional links
const socialLinks = {
  behance: "https://www.behance.net/YourUsername",
  dribbble: "https://dribbble.com/YourUsername",
  linkedin: "https://linkedin.com/in/YourUsername",
};
---
<footer class="main-footer">
  <div class="container">
    <p>&copy; {new Date().getFullYear()} Your Name. All rights reserved.</p>
    <div class="social-links">
      <a href={socialLinks.behance} target="_blank" rel="noopener noreferrer">Behance</a>
      <a href={socialLinks.dribbble} target="_blank" rel="noopener noreferrer">Dribbble</a>
      <a href={socialLinks.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>
    </div>
  </div>
</footer>
<style>
  .main-footer { border-top: 1px solid var(--border-color); margin-top: 4rem; padding: 2rem 0; }
  .main-footer .container { display: flex; flex-direction: column; align-items: center; gap: 1rem; }
  @media (min-width: 640px) { .main-footer .container { flex-direction: row; justify-content: space-between; } }
  .main-footer p { margin: 0; color: var(--hint-color); font-size: 0.9rem; }
  .social-links { display: flex; gap: 1.5rem; }
</style>